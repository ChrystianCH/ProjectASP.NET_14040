@*define model*@
@model Author

@*Define ViewData*@

@{
	ViewData["Title"] = "Delete confirmation Author";
}

@*Code*@
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete confirmation  for @Model.FullName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">

                    <div class="form-group text-center">
                        <img id="AuthorLogoPreview"  class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ProfilePicture" class="control-label"></label>
                        <input asp-for="ProfilePicture" class="form-control" readonly />
                        <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" readonly/>
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bio" class="control-label"></label>
                        <input asp-for="Bio" class="form-control" readonly />
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                      <form action="Delete" method="post" class="d-inline">
                          <input type="hidden" asp-for="Id"/>
                          <input type="submit" value="Confirm" class="btn btn-danger float-right"/>
                      </form>
                        <a class="btn btn-outline-secondary " asp-action="Index">Back</a>
                    </div>
            
            </div>
        </div>
    </div>
</div>

@section Scripts{ 
    <script>
        $(document).ready(function () {
            var output = document.getElementById('AuthorLogoPreview');
            output.src = $("#ProfilePicture").val();
        })
    
    </script>
}