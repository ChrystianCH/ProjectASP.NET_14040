@*define model*@
@model IEnumerable<BookStore>

@*Define ViewData*@

@{
	ViewData["Title"] = "List of Bookstores";
}

@*Code*@


<div class="row">
	<div class="col-md-8 offset-md-2">

		<table class="table">
			<thead>
				<tr class="text-center">
				<th>@Html.DisplayNameFor(model => model.BookStoreLogo)</th>
				<th>@Html.DisplayNameFor(model => model.Name)</th>
				<th>@Html.DisplayNameFor(model => model.Description)</th>
		     <th>Actions</th>
			</tr>
			</thead>
			<tbody>
				@foreach (var bookStore in Model)
				{
					<tr class="align-middle text-center">
						<td >
							<img class="rounded-circle" src="@bookStore.BookStoreLogo" alt="@bookStore.Name" style="max-width: 150px; max-height: 150px"/>
						</td>
						<td >
							@Html.DisplayFor(model => bookStore.Name)
						</td>
						<td >
						@Html.DisplayFor(model => bookStore.Description)

						</td>
						<td >
							<a class="btn btn-outline-primary"><i class="bi bi-pencil-square">Edit</i></a>
							<a class="btn btn-outline-info"><i class="bi bi-eye">Details</i></a>
							<a class="btn btn-outline-danger"><i class="bi bi-trash">Delete</i></a>
						</td>
					</tr>
				}

			</tbody>
		</table>


	</div>


</div>
